<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multicampus.gangwonActivity.mapper.MyFavoriteMapper">

    <select id="selectUserNo" resultType="long">
        SELECT userNo
        FROM user
        WHERE userId = #{userId}
    </select>

    <insert id="saveFavorite">
        INSERT INTO myFavoritesMappingTable (userNo, placeNo)
        VALUES (#{userNo}, #{placeNo})
    </insert>
    <select id="selectExistsFavorite" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM myFavoritesMappingTable WHERE userNo = #{userNo} AND placeNo = #{placeNo}) AS ischeck
    </select>


</mapper>